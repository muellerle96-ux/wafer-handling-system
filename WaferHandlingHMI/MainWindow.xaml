<Window x:Class="WaferHandlingHMI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaferHandlingHMI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="300"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="100"/>
            </Grid.ColumnDefinitions>
            
            <!--Add each component of the Wafer as a seperate Control-->
            <local:LoadPortControl Grid.Column="0" x:Name="LP1Control" LoadPortName="LP1"/>
            <local:RobotArmControl Grid.Column="1" x:Name="RobotControl" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            <local:LoadPortControl Grid.Column="2" x:Name="LP2Control" LoadPortName="LP2"/>

        </Grid>
        
        <local:OperationPanelControl Grid.Row="2" Margin="10"/>
    </Grid>
</Window>
