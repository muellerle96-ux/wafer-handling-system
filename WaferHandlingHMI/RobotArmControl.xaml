<UserControl x:Class="WaferHandlingHMI.RobotArmControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaferHandlingHMI" xmlns:viewmodels="clr-namespace:WaferHandlingHMI.ViewModels" d:DataContext="{d:DesignInstance Type=viewmodels:RobotViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="600">
    <UserControl.Resources>
        <!--Set the style for rectangles and circles representing the robot arm-->
        <Style TargetType="Rectangle">
            <Setter Property="Height" Value="100"/>
            <Setter Property="Width" Value="140"/>
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Ellipse">
            <Setter Property="Height" Value="90"/>
            <Setter Property="Width" Value="90"/>
            <Setter Property="Stroke" Value="Black"/>
            <Setter Property="StrokeThickness" Value="1"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="FontSize" Value="10"/>
            <Setter Property="Margin" Value="-5, -5"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>
    </UserControl.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="90"/>
            <ColumnDefinition Width="140"/>
            <ColumnDefinition Width="90"/>
        </Grid.ColumnDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Station A"/>
        <Label Grid.Column="4" Grid.Row="0" Content="Station B"/>

        <Ellipse x:Name="LeftHand" Grid.Column="0" Grid.Row="1" Fill="{Binding RobotParts[0].FillColor}"/>
        <Ellipse x:Name="CenterJoint" Grid.Column="2" Grid.Row="1" Fill="{Binding RobotParts[2].FillColor}"/>
        <Ellipse x:Name="RightHand" Grid.Column="4" Grid.Row="1" Fill="{Binding RobotParts[4].FillColor}"/>

        <Rectangle x:Name="LeftArm" Grid.Column="1" Grid.Row="1" Fill="{Binding RobotParts[1].FillColor}"/>
        <Rectangle x:Name="RightArm" Grid.Column="3" Grid.Row="1" Fill="{Binding RobotParts[3].FillColor}"/>
    </Grid>
</UserControl>
