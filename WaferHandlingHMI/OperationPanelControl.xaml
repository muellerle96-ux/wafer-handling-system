<UserControl x:Class="WaferHandlingHMI.OperationPanelControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WaferHandlingHMI" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Name="StartButton" Content="Start" Width="300" Margin="10" FontSize="40" Click="StartButton_Click" Command="{Binding StartCommand}"/>
        <Button Grid.Column="2" Name="StopButton"  Content="Stop" Width="300" Margin="10" FontSize="40"/>
    </Grid>
</UserControl>
